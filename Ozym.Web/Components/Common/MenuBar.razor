<ul class="menu-bar">
    <CascadingValue Name="VerticalExpansion" Value="@OpenVertical">
        <CascadingValue Name="HorizontalExpansion" Value="@OpenHorizontal">
            <MenuStripItem 
                MenuItem="Menu" HyperlinkClickCallBack="HyperlinkClickCallBack" 
                DisplayIconLeft="Menu.RootOptions.DisplayIcon"
                DisplayCaption="Menu.RootOptions.DisplayCaption"
                DisplayChildMenuChevron="Menu.RootOptions.DisplayChildMenuChevron" />
        </CascadingValue>
    </CascadingValue>
</ul>

@code {
    /// <summary>
    /// Gets or sets the object defining the content of this menu.
    /// </summary>
    [Parameter, EditorRequired]
    public MenuRoot Menu { get; set; } = default!;

    /// <summary>
    /// Gets or sets the delegate overriding the link behavior for this menu item.
    /// </summary>
    [Parameter, EditorRequired]
    public EventCallback<LinkClickEventArgs> HyperlinkClickCallBack { get; set; }

    [Parameter]
    public MenuStripItem.ExpandDirection OpenVertical { get; set; } = MenuStripItem.ExpandDirection.Down;

    [Parameter]
    public MenuStripItem.ExpandDirection OpenHorizontal { get; set; } = MenuStripItem.ExpandDirection.Left;
}
