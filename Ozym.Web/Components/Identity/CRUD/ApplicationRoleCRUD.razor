@inherits ModelCRUD<ApplicationRole>

@if (ModelDto is null)
{
    <LoadingSvg />
}
else
{
    <ModelForm TModelDto="ApplicationRole">
        <ModelFormEntry ForMember="@(() => ModelDto.Name)">
            <ChildContent>
                @if (ReadOnly)
                {
                    <div class="form-control">
                        @ModelDto.Name
                    </div>
                }
                else
                {
                    <InputText class="form-control" @bind-Value=ModelDto.Name
                               disable="@Disabled"
                               DisplayName=@(NameFor(x => x.Name)) />
                }
            </ChildContent>
        </ModelFormEntry>

    </ModelForm>
}

@code {
    private string GetConfirmedCaption(bool confirmed) =>
        confirmed ? Resources.Strings.Caption_IsConfirmed : Resources.Strings.Caption_IsNotConfirmed;
}