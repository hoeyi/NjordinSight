@page "/investment-models"

@inherits ModelIndex<InvestmentStrategy>

<PageTitle>@(PageTitle.ReadMany().AsPageTitle())</PageTitle>

<ThemedComponent>
    <ModelPageMenuHeader ActionMenu="@ActionMenu" />

    @if (IsLoading)
    {
        <LoadingSvg />
    }
    else
    {
        <ContentTile>
            <Body>
                <DataGrid Data="@Models" class="datagrid">
                    <DataGridColumn Property=@nameof(InvestmentStrategy.DisplayName)
                                Caption=@(NameFor<AccountCustodian>(nameof(AccountCustodian.CustodianCode)))
                                Type=@DataGridCellType.Link>
                        <CellTemplate Context="model">
                            <a href=@(FormatDetailUri(model.InvestmentStrategyId)) @onclick:preventDefault 
                                @onclick="@(args => Detail_OnClick(model, args))">
                                @model.DisplayName
                            </a>
                        </CellTemplate>
                    </DataGridColumn>
                </DataGrid>
            </Body>
        </ContentTile>
    }
</ThemedComponent>

@code {
    /// <inheritdoc/>
    protected override async Task OnInitializedAsync()
    {
        ActionMenu = new()
        {
            IconKey = "reorder-four",
            Caption = PageTitle.ReadMany(),
            Children = new()
            {
                { 0, new MenuItem()
                    {
                        IconKey = "create",
                        Caption = $"Create new {ModelNoun.GetSingular()}",
                        UriStem = FormatCreateUri(Guid.NewGuid())
                    }
                }
            }
        };

        MaxRecordCount = -1;

        await base.OnInitializedAsync();
    }

    private void Detail_OnClick(InvestmentStrategy model, MouseEventArgs args)
    {
        NavigationHelper.NavigateTo(FormatDetailUri(model.InvestmentStrategyId));
    }
}