@page "/bank-transaction-codes/{ModelId:int}/edit/attributes"

@inherits ModelDetail<BankTransactionCode>

@inject IReferenceDataService ReferenceData

<ThemedComponent>
    @if (IsLoading)
    {
        <LoadingSvg />
    }
    else
    {
        <PageTitle>@(PageTitle.UpdateSingle(Model.DisplayName).AsPageTitle())</PageTitle>

        <ModelPageMenuHeader ActionMenu="@ActionMenu"
                         Header="@(PageTitle.UpdateSingle(Model.DisplayName))" />

        <AttributeEntryEditor
            TViewModelParent="BankTransactionCodeViewModel"
            TViewModelChild="BankTransactionCodeAttributeGrouping"
            TModel="BankTransactionCode"
            TModelChild="BankTransactionCodeAttributeMemberEntry"
            OnCancelEditorClick="CancelEditorHandler"
            OnDeleteModelClick="DeleteModelHandler"
            OnValidFormSubmit="ValidFormSubmitHandler"
            ViewModel="@ViewModel"
            Mode="EditorMode.Edit">
            <ViewModelCRUD>
                <BankTransactionCodeCRUD Disabled="false" ReadOnly="false" />
            </ViewModelCRUD>
            <ViewModelChildCRUD>
                <BankTransactionCodeAttributeEntryCRUD Disabled="false" ReadOnly="false" />
            </ViewModelChildCRUD>
        </AttributeEntryEditor>
    }
</ThemedComponent>

@code {
    /// <summary>
    /// Gets or sets the identifier for the <see cref="BankTransactionCode" /> worked on this page.
    /// </summary>
    [Parameter]
    public int ModelId { get; set; }

    /// <summary>
    /// Gets or sets the <see cref="BankTransactionCodeViewModel" /> worked by this page.
    /// </summary>
    private BankTransactionCodeViewModel ViewModel { get; set; }


    protected override async Task OnInitializedAsync()
    {
        ActionMenu = new()
            {
                IconKey = "reorder-four",
                Children = new()
                {
                    // Add index button.
                    { 0, new MenuItem()
                        {
                            IconKey = "list",
                            Caption = $"{Resources.Strings.Caption_Button_Index}",
                            UriStem = $"{IndexUriRelativePath}"
                        }
                    }
                }
            };

        IsLoading = true;

        try
        {
            var modelQuery = Controller.ReadAsync(ModelId);

            if ((await modelQuery).Value is BankTransactionCode model)
            {
                Model = model;
            }

            ViewModel = new(Model);
        }
        finally
        {
            IsLoading = Model is null || ViewModel is null;
        }
    }

    /// <summary>
    /// Handles the delete click event of this page.
    /// </summary>
    private async Task DeleteModelHandler(MouseEventArgs args)
    {
        var result = await Controller.DeleteAsync(Model);

        if (result is NoContentResult _)
            NavigationHelper.NavigateTo(IndexUriRelativePath);
    }

    /// <summary>
    /// Handles the valid form submission event of this page.
    /// </summary>
    private async Task ValidFormSubmitHandler(EditContext args)
    {
        Model = ViewModel.ToEntity();

        var result = await Controller.UpdateAsync(Model.TransactionCodeId, Model);

        if (Model is not null)
            NavigationHelper.NavigateTo(
                $"{FormatDetailUri(result.Value.TransactionCodeId)}/attributes");
    }

    /// <summary>edit
    /// Handles the cancel editor event of this page.
    /// </summary>
    private void CancelEditorHandler(MouseEventArgs args) =>
        NavigationHelper.NavigateTo($"{FormatDetailUri(ModelId)}/attributes");
}