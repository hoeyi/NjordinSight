@inherits ModelCRUD<BankTransactionCode>

@if (ViewModel is null)
{
    <LoadingSvg />
}
else
{
    <ModelForm TModel="BankTransactionCode">
        <ModelFormLineItem MemberName="@nameof(BankTransactionCode.TransactionCode)"
            ValidationMessageDelegate="@(() => ViewModel.TransactionCode)">
            @if (ReadOnly)
            {
                @ViewModel.TransactionCode
            }
            else
            {
                <InputText class="form-control" @bind-Value=ViewModel.TransactionCode
                    disable="@Disabled"
                    DisplayName="@(NameFor(nameof(BankTransactionCode.TransactionCode)))" />
            }
        </ModelFormLineItem>
        <ModelFormLineItem MemberName="@nameof(BankTransactionCode.DisplayName)"
            ValidationMessageDelegate="@(() => ViewModel.DisplayName)">
            @if (ReadOnly)
            {
                @ViewModel.DisplayName
            }
            else
            {
                <InputText class="form-control" @bind-Value=ViewModel.DisplayName
                    disable="@Disabled"
                    DisplayName="@(NameFor(nameof(BankTransactionCode.DisplayName)))" />
            }
        </ModelFormLineItem>
    </ModelForm>
}
