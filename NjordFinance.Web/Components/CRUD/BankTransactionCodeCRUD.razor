@inherits ModelCRUD<BankTransactionCode>

@if (Model is null)
{
    <LoadingSvg />
}
else
{
    <ModelForm TModel="BankTransactionCode">
        <ModelFormLineItem MemberName="@nameof(BankTransactionCode.TransactionCode)"
            ValidationMessageDelegate="@(() => Model.TransactionCode)">
            @if (ReadOnly)
            {
                @Model.TransactionCode
            }
            else
            {
                <InputText class="form-control" @bind-Value=Model.TransactionCode
                    disable="@Disabled"
                    DisplayName="@(NameFor(nameof(BankTransactionCode.TransactionCode)))" />
            }
        </ModelFormLineItem>
        <ModelFormLineItem MemberName="@nameof(BankTransactionCode.DisplayName)"
            ValidationMessageDelegate="@(() => Model.DisplayName)">
            @if (ReadOnly)
            {
                @Model.DisplayName
            }
            else
            {
                <InputText class="form-control" @bind-Value=Model.DisplayName
                    disable="@Disabled"
                    DisplayName="@(NameFor(nameof(BankTransactionCode.DisplayName)))" />
            }
        </ModelFormLineItem>
    </ModelForm>
}
