@inherits ModelCRUD<AccountCustodian>

@if (ViewModel is null)
{
    <LoadingSvg />
}
else
{
    <ModelForm TModel="AccountCustodian" >
        <ModelFormLineItem MemberName="@nameof(AccountCustodian.CustodianCode)"
            ValidationMessageDelegate="@(() => ViewModel.CustodianCode)" >
            @if(ReadOnly)
            {
                @ViewModel.CustodianCode
            }
            else
            {
                <InputText class="form-control" @bind-Value=ViewModel.CustodianCode
                    disable="@Disabled"
                    DisplayName=@(NameFor(x => x.CustodianCode)) />
            }
        </ModelFormLineItem>
        <ModelFormLineItem MemberName="@nameof(AccountCustodian.DisplayName)"
            ValidationMessageDelegate="@(() => ViewModel.DisplayName)" >
            @if(ReadOnly)
            {
                @ViewModel.DisplayName
            }
            else
            {
                <InputText class="form-control" @bind-Value=ViewModel.DisplayName
                    disable="@Disabled"
                    DisplayName=@(NameFor(x => x.DisplayName)) />
            }
        </ModelFormLineItem>
    </ModelForm>
}