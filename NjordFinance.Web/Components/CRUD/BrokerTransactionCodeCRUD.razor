@inherits ModelCRUD<BrokerTransactionCode>

@if (ViewModel is null)
{
    <LoadingSvg />
}
else
{
    <ModelForm TModel="BrokerTransactionCode">
        <ModelFormLineItem MemberName="@nameof(BrokerTransactionCode.TransactionCode)"
            ValidationMessageDelegate="@(() => ViewModel.TransactionCode)">
            @if (ReadOnly)
            {
                @ViewModel.TransactionCode
            }
            else
            {
                <InputText class="form-control" @bind-Value=ViewModel.TransactionCode
                    disable="@Disabled"
                    DisplayName="@(NameFor(x => x.TransactionCode))" />
            }
        </ModelFormLineItem>
        <ModelFormLineItem MemberName="@nameof(BrokerTransactionCode.DisplayName)"
            ValidationMessageDelegate="@(() => ViewModel.DisplayName)">
            @if (ReadOnly)
            {
                @ViewModel.DisplayName
            }
            else
            {
                <InputText class="form-control" @bind-Value=ViewModel.DisplayName
                    disable="@Disabled"
                    DisplayName="@(NameFor(x => x.DisplayName))" />
            }
        </ModelFormLineItem>
        <ModelFormLineItem MemberName="@nameof(BrokerTransactionCode.CashEffect)"
            ValidationMessageDelegate="@(() => ViewModel.CashEffect)">
            @if (ReadOnly)
            {
                @ViewModel.CashEffect
            }
            else
            {
                <InputNumber class="form-control" @bind-Value=ViewModel.CashEffect
                    disable="@Disabled"
                    DisplayName="@(NameFor(x => x.CashEffect))" />
            }
        </ModelFormLineItem>
        <ModelFormLineItem MemberName="@nameof(BrokerTransactionCode.ContributionWithdrawalEffect)"
            ValidationMessageDelegate="@(() => ViewModel.ContributionWithdrawalEffect)">
            @if (ReadOnly)
            {
                @ViewModel.ContributionWithdrawalEffect
            }
            else
            {
                <InputNumber class="form-control" @bind-Value=ViewModel.ContributionWithdrawalEffect
                    disable="@Disabled"
                    DisplayName="@(NameFor(x => x.ContributionWithdrawalEffect))" />
            }
        </ModelFormLineItem>
        <ModelFormLineItem MemberName="@nameof(BrokerTransactionCode.QuantityEffect)"
            ValidationMessageDelegate="@(() => ViewModel.QuantityEffect)">
            @if (ReadOnly)
            {
                @ViewModel.QuantityEffect
            }
            else
            {
                <InputNumber class="form-control" @bind-Value=ViewModel.QuantityEffect
                    disable="@Disabled"
                    DisplayName="@(NameFor(x => x.QuantityEffect))" />
            }
        </ModelFormLineItem>
    </ModelForm>
}
