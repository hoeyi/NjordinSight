@inherits ModelCRUD<AccountObject>

@if (Model is null)
{
    <LoadingSvg />
}
else
{
    <ModelForm TModel="AccountObject" Model="@Model">
        <ModelFormLineItem MemberName="@nameof(AccountObject.AccountObjectCode)"
            ValidationMessageDelegate="@(() => Model.AccountObjectCode)">
            @if (ReadOnly)
            {
                @Model.AccountObjectCode
            }
            else
            {
                <InputText class="form-control" @bind-Value=Model.AccountObjectCode
                    disable="@Disabled"
                    DisplayName=@(NameFor(nameof(AccountObject.AccountObjectCode))) />
            }
        </ModelFormLineItem>
        <ModelFormLineItem MemberName="@nameof(AccountObject.ObjectDisplayName)"
            ValidationMessageDelegate="@(() => Model.ObjectDisplayName)">
            @if (ReadOnly)
            {
                @Model.ObjectDisplayName
            }
            else
            {
                <InputText class="form-control" @bind-Value=Model.ObjectDisplayName
                    disable="@Disabled"
                    DisplayName=@(NameFor(nameof(AccountObject.ObjectDisplayName))) />
            }
        </ModelFormLineItem>
        <ModelFormLineItem MemberName="@nameof(AccountObject.ObjectDescription)"
            ValidationMessageDelegate="@(() => Model.ObjectDescription)">
            @if (ReadOnly)
            {
                @Model.ObjectDescription
            }
            else
            {
                <InputText class="form-control" @bind-Value=Model.ObjectDescription
                    disable="@Disabled"
                    DisplayName=@(NameFor(nameof(AccountObject.ObjectDescription))) />
            }
        </ModelFormLineItem>
        <ModelFormLineItem MemberName="@nameof(AccountObject.StartDate)"
            ValidationMessageDelegate="@(() => Model.StartDate)">
            @if (ReadOnly)
            {
                @Model.StartDate.ToShortDateString()
            }
            else
            {
                <InputDate class="form-control" @bind-Value=Model.StartDate disable="@Disabled" />
            }
        </ModelFormLineItem>
        <ModelFormLineItem MemberName="@nameof(AccountObject.CloseDate)"
            ValidationMessageDelegate="@(() => Model.CloseDate)">
            @if (ReadOnly)
            {
                @Model.CloseDate?.ToShortDateString()
            }
            else
            {
                <InputDate class="form-control" @bind-Value=Model.CloseDate disable="@Disabled" />
            }
        </ModelFormLineItem>
    </ModelForm>
}
