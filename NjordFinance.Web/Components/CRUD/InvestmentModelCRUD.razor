@inherits ModelCRUD<InvestmentModelViewModel>

@if(IsLoading)
{
    <LoadingSvg />
}
else
{
    <ModelForm TViewModel="InvestmentModelViewModel">
        <ModelFormLineItem ForMember="@(x => x.DisplayName)"
            ValidationMessageDelegate="@(() => ViewModel.DisplayName)">
            @if(ReadOnly)
            {
                <div class="form-control">
                    @ViewModel.DisplayName
                </div>
            }
            else
            {
                <InputText class="form-control" @bind-Value=ViewModel.DisplayName
                    disable="@Disabled"
                    DisplayName=@(NameFor(x => x.DisplayName)) />
            }
        </ModelFormLineItem>
        <ModelFormLineItem ForMember="@(x => x.Notes)"
            ValidationMessageDelegate="@(() => ViewModel.Notes)">
            @if(ReadOnly)
            {
                <div class="form-control text-area">
                    @ViewModel.Notes
                </div>
            }
            else
            {
                <InputTextArea class="form-control" @bind-Value=ViewModel.Notes
                    disable="@Disabled"
                    DisplayName=@(NameFor(x => x.Notes)) />
            }
        </ModelFormLineItem>
    </ModelForm>
}