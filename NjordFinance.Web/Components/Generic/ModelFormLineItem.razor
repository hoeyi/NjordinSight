@typeparam TModel

@if(!string.IsNullOrEmpty(MemberName))
{
    <tr>
        <td class="col-sm-2">
            <ToolTip Text="@ParentForm.DescriptionFor(MemberName)">
                @(ParentForm.NameFor(MemberName))
            </ToolTip>
        </td>
        <td class="col-sm-10">
            @ChildContent
            <ValidationMessage For="@ValidationMessageDelegate" />
        </td>
    </tr>
}

@code {
    [CascadingParameter]
    private ModelForm<TModel> ParentForm { get; set; }

    [Parameter] 
    public RenderFragment? ChildContent { get; set; }

    [Parameter]
    public string MemberName { get; set; }

    [Parameter]
    public Expression<Func<object>> ValidationMessageDelegate { get; set; }
}
