<ul class="menu-bar">
    <MenuStripItem MenuItem="Menu" HyperlinkDelegate="HyperlinkDelegate"/>
</ul>

@code {
    /// <summary>
    /// Gets or sets the object defining the content of this menu.
    /// </summary>
    [Parameter, EditorRequired]
    public MenuRoot Menu { get; set; }

    /// <summary>
    /// Gets or sets the delegate overriding the link behavior for this menu item.
    /// </summary>
    [Parameter]
    public EventCallback<LinkClickEventArgs> HyperlinkDelegate { get; set; }
}
