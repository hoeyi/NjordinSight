@inherits ModelCRUD<SecurityTypeGroup>

@if (IsLoading)
{
    <LoadingSvg />
}
else
{
    <ModelForm TModelDto="SecurityTypeGroup">
        <ModelFormEntry ForMember="@(() => ModelDto.SecurityTypeGroupName)">
            @if (ReadOnly)
            {
                <div class="form-control">
                    @ModelDto.SecurityTypeGroupName
                </div>
            }
            else
            {
                <InputText class="form-control" @bind-Value="ModelDto.SecurityTypeGroupName"
                   disable="@Disabled"
                   DisplayName="@NameFor(x => x.SecurityTypeGroupName)" />
            }
        </ModelFormEntry>
        <ModelFormEntry ForMember="@(() => ModelDto.Transactable)">
            @if (ReadOnly)
            {
                <div class="form-control">
                    @ModelDto.Transactable
                </div>
            }
            else
            {
                <InputCheckbox class="checkbox-themed" @bind-Value="ModelDto.Transactable"
                       disable="@Disabled"
                       DisplayName="@NameFor(x => x.Transactable)" />
            }
        </ModelFormEntry>
        <ModelFormEntry ForMember="@(() => ModelDto.DepositSource)">
            @if (ReadOnly)
            {
                <div class="form-control">
                    @ModelDto.DepositSource
                </div>
            }
            else
            {
                <InputCheckbox class="checkbox-themed" @bind-Value="ModelDto.DepositSource"
                       disable="@Disabled"
                       DisplayName="@NameFor(x => x.DepositSource)" />
            }
        </ModelFormEntry>
    </ModelForm>
}

@code {
    protected override void OnInitialized()
    {
        IsLoading = ModelDto is null;
    }
}
