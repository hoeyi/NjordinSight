@inherits ModelCRUD<AccountCustodianDto>

@if (ModelDto is null)
{
    <LoadingSvg />
}
else
{
    <ModelForm TModelDto="AccountCustodianDto">
        <ModelFormEntry ForMember="@(() => ModelDto.CustodianCode)">
            @if(ReadOnly)
            {
                @ModelDto.CustodianCode
            }
            else
            {
                <InputText class="form-control" @bind-Value=ModelDto.CustodianCode
                    disable="@Disabled"
                    DisplayName=@(NameFor(x => x.CustodianCode)) />
            }
        </ModelFormEntry>
        <ModelFormEntry ForMember="@(() => ModelDto.DisplayName)">
            @if(ReadOnly)
            {
                @ModelDto.DisplayName
            }
            else
            {
                <InputText class="form-control" @bind-Value=ModelDto.DisplayName
                    disable="@Disabled"
                    DisplayName=@(NameFor(x => x.DisplayName)) />
            }
        </ModelFormEntry>
    </ModelForm>
}