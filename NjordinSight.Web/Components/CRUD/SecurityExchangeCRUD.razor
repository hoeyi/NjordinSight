@inherits ModelCRUD<SecurityExchange>

@if (ModelDto is null)
{
    <LoadingSvg />
}
else
{
    <ModelForm TModelDto="ModelAttribute">
        <ModelFormLineItem ForMember="@(() => ModelDto.ExchangeCode)">
            @if (ReadOnly)
            {
                <div class="form-control">
                    @ModelDto.ExchangeCode
                </div>
            }
            else
            {
                <InputText class="form-control" @bind-Value="ModelDto.ExchangeCode"
                   disable="@Disabled"
                   DisplayName="@NameFor(x => x.ExchangeCode)" />
            }
        </ModelFormLineItem>
        <ModelFormLineItem ForMember="@(() => ModelDto.ExchangeDescription)">
            @if (ReadOnly)
            {
                <div class="form-control">
                    @ModelDto.ExchangeDescription
                </div>
            }
            else
            {
                <InputText class="form-control" @bind-Value="ModelDto.ExchangeDescription"
                   disable="@Disabled"
                   DisplayName="@NameFor(x => x.ExchangeDescription)" />
            }
        </ModelFormLineItem>
    </ModelForm>
}