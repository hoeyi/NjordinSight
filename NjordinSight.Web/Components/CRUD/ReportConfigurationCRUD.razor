@inherits ModelCRUD<ReportConfiguration>

@if(ModelDto is null)
{
    <LoadingSvg />
}
else
{
    <ModelForm TModelDto="ReportConfiguration">
        <ModelFormLineItem ForMember="@(() => ModelDto.ConfigurationCode)">
            @if (ReadOnly)
            {
                <div class="form-control">
                    @ModelDto.ConfigurationCode
                </div>
            }
            else
            {
                <InputText class="form-control" @bind-Value="ModelDto.ConfigurationCode"
                   disable="@Disabled"
                   DisplayName="@NameFor(x => x.ConfigurationCode)" />
            }
        </ModelFormLineItem>
        <ModelFormLineItem ForMember="@(() => ModelDto.ConfigurationDescription)">
            @if (ReadOnly)
            {
                <div class="form-control">
                    @ModelDto.ConfigurationDescription
                </div>
            }
            else
            {
                <InputText class="form-control" @bind-Value="ModelDto.ConfigurationDescription"
                   disable="@Disabled"
                   DisplayName="@NameFor(x => x.ConfigurationDescription)" />
            }
        </ModelFormLineItem>
        <ModelFormLineItem ForMember="@(() => ModelDto.XmlDefinition)">
            @if(ReadOnly)
            {
                <div class="form-control">
                    @ModelDto.XmlDefinition
                </div>
            }
            else
            {
                <InputTextArea class="form-control" @bind-Value="ModelDto.XmlDefinition"
                    disable="@Disabled"
                   DisplayName="@NameFor(x => x.XmlDefinition)" />
            }
        </ModelFormLineItem>
    </ModelForm>
}