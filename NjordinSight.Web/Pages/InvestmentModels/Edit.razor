@page "/investment-models/{ModelId:int}/edit"

@inherits ModelDetail<InvestmentStrategy>

<ThemedComponent>
    @if(IsLoading)
    {
        <LoadingSvg />
    }
    else
    {
        <PageTitle>@(PageTitle.UpdateSingle(ModelDto.DisplayName).AsPageTitle())</PageTitle>

        <ModelPageMenuHeader 
            ActionMenu="@ActionMenu"
            Header="@(PageTitle.UpdateSingle(ModelDto.DisplayName))" />

        <CascadingValue Value="@ErrorMessage">
            <ErrorMessageBox Header="@Resources.Strings.Exception_Message_Generic" />
        </CascadingValue>

        <AttributeEntryCollectionEditor 
            TViewModelParent="InvestmentModelDto"
            TViewModelChild="InvestmentModelTargetGrouping"
            TModel="InvestmentStrategy"
            TModelChild="InvestmentStrategyTarget"
            OnCancelEditorClick="FormCancelClickHandler"
            OnDeleteModelClick="FormDeleteClickHandler"
            OnValidFormSubmit="ValidFormSubmitHandler"
            EffectiveDatePath="@(x => x.EffectiveDate)"
            ModelDto="@ModelDto"
            Mode="EditorMode.Edit">
            <ViewModelCRUD>
                <InvestmentModelCRUD Disabled="false" ReadOnly="false" />
            </ViewModelCRUD>
            <ViewModelChildCRUD>
                <InvestmentModelTargetCRUD Disabled="false" ReadOnly="false" />
            </ViewModelChildCRUD>
        </AttributeEntryCollectionEditor>
    }
</ThemedComponent>

@code {
    [Parameter]
    public int ModelId { get; init; }

    private InvestmentModelDto ModelDto { get; set; }

    protected override async Task OnInitializedAsync()
    {
        IsLoading = true;

        try
        {
            var modelQuery = Controller.ReadAsync(ModelId);

            if ((await modelQuery).Value is InvestmentStrategy model)
            {
                Model = model;
            }

            ActionMenu = new()
                {
                    IconKey = "reorder-four",
                    Children = new()
                    {
                        // Add index button.
                        { 0, new MenuItem()
                            {
                                IconKey = "list",
                                Caption = string.Format(
                                    Strings.Caption_ViewMany, ModelNoun?.GetPlural()),
                                UriStem = $"{IndexUriRelativePath}"
                            }
                        }
                    }
                };

            ModelDto = new(Model);
        }
        finally
        {
            IsLoading = Model is null || ModelDto is null;
        }
    }

    /// <summary>
    /// Handles the delete click event of this page.
    /// </summary>
    protected virtual async Task FormDeleteClickHandler(MouseEventArgs args)
    {
        var result = await RunCatchingModelUpdateException(Controller.DeleteAsync(Model));

        if (result is NoContentResult _)
            NavigationHelper.NavigateTo(IndexUriRelativePath);
    }

    /// <summary>
    /// Handles the valid form submission event of this page.
    /// </summary>
    protected virtual async Task ValidFormSubmitHandler(EditContext args)
    {
        Model = ModelDto.ToEntity();

        var result = await RunCatchingModelUpdateException(Controller.UpdateAsync(ModelId, Model));

        int? id = result?.Value is null ? null : GetKeyValueOrDefault<int>(result.Value);

        ProcessDetailAtAction(id);
    }

    /// <summary>
    /// Handles the cancel editor event of this page.
    /// </summary>
    protected virtual void FormCancelClickHandler(MouseEventArgs args) => 
        NavigationHelper.NavigateTo(FormatDetailUri(ModelId));
}
